{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
    <h3>Created by {{post.user.name}} on {{formatDate post.dateCreated}}</h3>
  </div>
</div>
</main>
{{/each}}